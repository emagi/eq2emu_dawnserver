<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log File Viewer</title>
  <link href="/css/style.css" rel="stylesheet" type="text/css">
    <script src="https://cdn.jsdelivr.net/npm/ansi-to-html@0.7.0/lib/ansi_to_html.js"></script>
</head>
<body>
<div class="dashboard-container">
    <h1>Log File</h1>
    <pre id="log-container"></pre>
    <script>
        // Log content with ANSI codes
        const logContent = `<%= logContent.replace(/`/g, '\\`') %>`;

        // Create an instance of AnsiToHtml
        const AnsiToHtml = require('ansi-to-html');
        const convert = new AnsiToHtml();

        // Convert ANSI codes to HTML
        const htmlContent = convert.toHtml(logContent);

        // Display the converted content in the pre tag
        document.getElementById('log-container').innerHTML = htmlContent;
    </script>
</div>
</body>
</html>
